- set_meta_tags site: @user.name, separator: '-'

.container
  .row
    .col-sm-12
      .text-center
        = display_user_avatar(@user, 100, 100)
      %p.text-center 
        = @user.name
      .mx-auto.pl-5.pr-5
        %p.text-left
          = @user.profile
      - if current_user == @user 
        = button_to 'ユーザー情報編集', edit_user_registration_path, method: :get, class: 'btn btn-primary float-right'
      .float-right.mr-2
        - if @user.github && @user.github != ''
          = link_to image_tag('github_icon.svg', size: '40x40'), "#{@user.github}"
        - if @user.twitter && @user.twitter != ''
          = link_to image_tag('twitter_icon.svg', size: '40x40'), "#{@user.twitter}"

      %ul.nav.nav-tabs
        %li.nav-item
          %a{ href: '#posts_list', class: 'nav-link active', 'data-toggle' => 'tab' } 投稿一覧
        %li.nav-item
          %a{ href: '#like_posts', class: 'nav-link', 'data-toggle' => 'tab' } いいねした記事

      .tab-content
        #posts_list.tab-pane.active
          = render 'shared/posts_list', posts: @posts
        #like_posts.tab-pane
          = render 'shared/posts_list', posts: @like_posts
