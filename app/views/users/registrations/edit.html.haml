.card.col-md-6.mx-auto.mt-5.mb-3
  .card-body
    %h2.text-center.mt-1.mb-4 ユーザー情報編集
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group
        = f.label :name, '名前', class: 'form-label'
        %i (必須)
        = f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control'
      .form-group
        = f.label :email, 'メールアドレス', class: 'form-label'
        %i (必須)
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .form-group
        = f.label :password, '新しいパスワード', class: 'form-label'
        - if @minimum_password_length
          %em
            = "( #{@minimum_password_length}"
            文字以上)
        %i (変更しない場合は空にして下さい)
        = f.password_field :password, autocomplete: "new-password", class: 'form-control'
      .form-group
        = f.label :password_confirmation, '新しいパスワード確認', class: 'form-label'
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
      .form-group
        = f.label :current_password, '現在のパスワード', class: 'form-label'
        %i (必須)
        = f.password_field :current_password, autocomplete: "current-password", class: 'form-control'
      .form-group
        = f.label :profile, 'プロフィール', class: 'form-label'
        = f.text_area :profile, rows: "4", cols: "50", class: 'form-control'
      .form-group
        = f.label :github, 'Githubリンク', class: 'form-label'
        = f.text_field :github, class: 'form-control'
      .form-group
        = f.label :twitter, 'Twitterリンク', class: 'form-label'
        = f.text_field :twitter, class: 'form-control'
      .input-group.overflow-hidden
        = f.file_field :avatar, class: 'custom-file-input'
        = f.label :avatar, 'アイコン選択', class: 'custom-file-label', for: "customFile", 'data-browse' => "参照"
      .actions.mt-3
        = f.submit "更新", id: 'customFile', class: 'btn btn-primary btn-block'
    %h3.mt-5 アカウント削除
    %p
      #{button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: 'btn btn-danger'}
    = link_to "戻る", :back

    
%script
  $('.custom-file-input').on('change',function(){
  $(this).next('.custom-file-label').html($(this)[0].files[0].name);
  })